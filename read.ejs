<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="w-full p-10 min-h-screen bg-zinc-900 text-white">

        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Create User</a>
        </div>

        <h1 class="text-3xl tracking-tighter mt-10 mb-5">All Users</h1>

        <div class="users flex gap-3 flex-wrap">

            <% if (users && users.length > 0) { %>

                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-xl overflow-hidden">
                        <div class="w-full h-52 rounded-lg bg-zinc-700">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                        </div>

                        <h3 class="text-xl tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500">email: <%= user.email %></h5>

                        <div class="flex gap-3 mt-10">
                            <a href="" class="text-zinc-200">Edit User</a>
                            <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
                        </div>
                    </div>
                <% }) %>

            <% } else { %>

                <p class="text-zinc-600">No users yet</p>

            <% } %>

        </div>
    </div>
</body>
</html>
